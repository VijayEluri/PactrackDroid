<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:orderingFromXml="true"
    android:title="@string/notify_light_advanced_title" >

    <EditTextPreference
        android:defaultValue="@string/notify_light_color_default"
        android:key="@string/key_notify_light_color"
        android:negativeButtonText="@string/cancel"
        android:positiveButtonText="@string/ok"
        android:summary="@string/notify_light_color_summary"
        android:title="@string/notify_light_color_title"
        android:digits="0123456789abcdefABCDEF"
        android:maxLength="6" />
    <EditTextPreference
        android:defaultValue="@string/notify_light_ontime_default"
        android:key="@string/key_notify_light_ontime"
        android:negativeButtonText="@string/cancel"
        android:positiveButtonText="@string/ok"
        android:summary="@string/notify_light_ontime_summary"
        android:title="@string/notify_light_ontime_title"
        android:digits="0123456789"
        android:inputType="number" />
    <EditTextPreference
        android:defaultValue="@string/notify_light_offtime_default"
        android:key="@string/key_notify_light_offtime"
        android:negativeButtonText="@string/cancel"
        android:positiveButtonText="@string/ok"
        android:summary="@string/notify_light_offtime_summary"
        android:title="@string/notify_light_offtime_title"
        android:digits="0123456789"
        android:inputType="number" />

</PreferenceScreen>
